<body>
    <div class="center">
    <h3>New album</h3>
    <form action="add" method="POST">
        <div class="field">
            <div class="label" for="album_name">Album name</div>
            <input type="text" name="album_name" placeholder="type" />
        </div>    
        <div class="field">
            <div class="label" for="artist_name">Artist name</div>
            <input type="text" name="artist_name" placeholder="type" />
        </div>    
        <div class="field">
            <div class="label" for="album_image">Album image link</div>
            <input type="text" name="album_image" placeholder="type" />
        </div>
        <div class="field">
            <div class="label" for="album_info">Album info</div>
            <input type="text" name="album_info" placeholder="type" />
        </div>
        <br>
        <button class="btn" type="submit">Create</button>
    </form>
    </div>
