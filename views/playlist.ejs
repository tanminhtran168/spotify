<div id="album-content">
    <img id="background-image" src="../images/eguitar.jpg">
    <div id="playlist-headings">
        <%= data.playlist_name %>
    </div>
    <div id="playlist-box" class="content-box">
        <button id = "song-play-button" onclick="playPlaylist('<%= data.playlist_id %>')">Play</button>
        <button id = "song-add-queue" onclick="addPlaylistToQueue('<%= data.playlist_id %>')">Add to Queue</button>
        <button id = "delete-playlist" onclick="deletePlaylist('<%= data.playlist_id %>')">Delete Playlist</button>
        <hr>
        <% songs.forEach(song => { %>
            <div class="list-item-song" onclick = "navigateTo('/song/<%=song.song_id%>')">
                <img class="list-song-cover" src="../<%= song.album_image%>">
                <div class="list-song-title"><%= song.song_name%></div>
                <div class="list-song-artist"><%=song.artist_name%></div>
                <div class="list-song-album"><%=song.album_name%></div>
                <div class="list-song-duration"><%= song.duration %></div>
                <div class="list-song-options" onclick="deleteFromPlaylist('<%= data.playlist_id %>','<%=song.song_id%>')">
                    <i class="fas fa-trash-alt"></i>
                </div>
            </div>
        <% }) %>
    </div>
</div>