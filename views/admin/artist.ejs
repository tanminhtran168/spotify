<div id="artist-content">
    <img id="background-image" src="../../<%= data.artist_image%>" alt="">
    <div id="artist-headings">
        <%= data.artist_name %>
    </div>
   
    <div id="artist-top-songs" class="content-box">
        <div>
            <button id = "song-add-queue" onclick="navigateTo('/admin/artist/<%= data.artist_id%>/update')">Edit Artist</button>
            <button id = "song-add-queue" onclick="deleteArtist('<%= data.artist_id%>')">Delete Artist</button>
        </div>
        <h1>All Songs</h1>
        <hr>
        <% songs.forEach(song => { %>
                <div class="list-item-song" onclick = "navigateTo('/song/<%=song.song_id%>')">
                    <img class="list-song-cover" src="../../<%=song.album_image%>">
                    <div class="list-song-title"><%= song.song_name%></div>
                    <div class="list-song-artist"><%=song.artist_name%></div>
                    <div class="list-song-album"><%=song.album_name%></div>
                    <div class="list-song-duration"><%= song.duration %></div>
                </div>
        <% }) %>
    </div>
    </div>
    <div id="artist-albums" class="content-box">
        <h1>Albums</h1> 
        <hr>
        <div class="catalogue">
            <% albums.forEach(album => { %>
                <div class="box-album" onclick = "navigateTo('/album/<%=album.album_id%>')">
                    <img class="box-album-cover" src="../../<%=album.album_image%>">
                    <div class="box-album-title"><%=album.album_name%></div>
                    <div class="box-album-artist"><%=album.artist_name%></div>
                </div>
                <% }) %> 
        </div>
        <hr>
    </div>
    <div id="artist-info" class="content-box">
        <div id="artist-details" class="details">
            <h1>About this Artist</h1>
            <p><%= data.artist_info %></p>
        </div>
       
    </div>
        
    </div>
</div>