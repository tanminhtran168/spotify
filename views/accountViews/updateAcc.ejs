<body>
    <div class="center">
    <h3>Update account</h3>
    <form action="update" method="POST">
        <div class="field">
            <div class="label" for="account_id">Account id</div>
            <input type="text" name="account_id" placeholder="type" />
        </div>    
        <div class="field">
            <div class="label" for="user_name">User name</div>
            <input type="text" name="user_name" placeholder="type" />
        </div>    
        <div class="field">
            <div class="label" for="old_password">Old password</div>
            <input type="password" name="old_password" placeholder="type" />
        </div>
        <div class="field">
            <div class="label" for="new_password">New password</div>
            <input type="password" name="new_password" placeholder="type" />
        </div>
        <div class="field">
            <div class="label" for="confirm_new_password">Confirm new password</div>
            <input type="password" name="confirm_new_password" placeholder="type" />
        </div>
        <div class="field">
            <div class="label" for="avatar">Avatar</div>
            <input type="text" name="avatar" placeholder="type"/>
        </div>
        <div class="field">
            <div class="label" for="full_name">Full name</div>
            <input type="text" name="full_name" placeholder="type"/>
        </div>
        <div class="field">
            <div class="label" for="birth_date">Birthday</div>
            <input type="date" name="birth_date" placeholder="type"/>
        </div>
        <div class="field">
            <div class="label" for="email">Email</div>
            <input type="text" name="email" placeholder="type"/>
        </div>
        <div class="field">
            <div class="label" for="phone_number">Phone_number</div>
            <input type="text" name="phone_number" placeholder="type"/>
        </div>
        <br>
        <button class="btn" type="submit">Update</button>
    </form>
    </div>
</body>