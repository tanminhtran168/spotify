<body>
    <div class="center">
    <h3>Add new song to playlist</h3>
    <form action="song/add" method="POST">
        <div class="field">
            <div class="label" for="playlist_id">Playlist id</div>
            <input type="text" name="playlist_id" placeholder="type" />
        </div>
        <div class="field">
            <div class="label" for="song_id">Song id</div>
            <input type="text" name="song_id" placeholder="type" />
        </div>    
        <br>
        <button class="btn" type="submit">Add</button>
    </form>
    </div>
</body>